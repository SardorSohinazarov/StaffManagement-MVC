@model StaffManagement.ViewModel.HomeDetailsViewModel

@{
    ViewBag.Title = "Staff Details";
    var photoFilePath = "~/images/" + (Model.Staff.PhotoFilePath ?? "user.png");
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card-header">
            <h1>@Model.Staff.Name</h1>
        </div>

        <div class="card-body text-center">
            <img class="card-img-top" src="@photoFilePath" asp-append-version="true"/>

            <h4>Staff Id : @Model.Staff.Id</h4>
            <h4>Staff Name : @Model.Staff.Name</h4>
            <h4>Staff Department : @Model.Staff.Department</h4>
        </div>

        <div class="card-footer text-center">
            <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
            <a href="#" class="btn btn-primary">Edit</a>
            <a href="#" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>


